---
import ProfilePic from './ProfilePic.astro'
import { Button } from './ui/button'
const { id } = Astro.props
---

<section id={id} class="bg-background">
  <div
    class="container mx-auto mt-28 grid lg:grid-cols-2  items-center px-6 md:px-40"
  >
    <!-- Text section -->
    <div class="flex flex-col items-start">
      <h2 class="nav-logo text-3xl mb-3 md:text-3xl">
        Web <span class="block">Developer</span>
      </h2>
      <h3 class="rubik-400">Seeking new opportunities in tech</h3>
      <Button className="mt-8 mb-16">Let's connect</Button>
    </div>
    <!-- Profile picture -->
    <div class="flex justify-center lg:justify-end">
      <ProfilePic class="w-full max-w-lg lg:max-w-full" />
    </div>
  </div>
</section>
