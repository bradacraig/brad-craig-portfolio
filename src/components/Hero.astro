---
import ProfilePic from './ProfilePic.astro'
import { Button } from './ui/button'
const { id } = Astro.props
---

<section id={id} class="bg-background">
  <div
    class="container mx-auto my-8 md:my-32 flex flex-col md:flex-row justify-center lg:gap-20 md:gap-10 items-center"
  >
    <!-- Text section -->
    <div class="mx-8 md:mx-0 flex flex-col items-start">
      <h1 class="nav-logo lg:text-6xl text-5xl my-4">Brad Craig</h1>
      <div class="ml-1">
        <h2 class="nav-logo text-3xl text-blue-500 md:text-3xl">
          Web Developer
        </h2>
        <!-- <h3 class="rubik-400">Seeking new opportunities in tech</h3> -->
        <Button className="my-8">Let's connect</Button>
      </div>
    </div>
    <!-- Profile picture -->
    <div
      class="flex justify-center items-center w-5/6 md:w-2/6 lg:w-1/3"
    >
      <ProfilePic />
    </div>
  </div>
</section>
