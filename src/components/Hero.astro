---
import ProfilePic from './ProfilePic.astro'
import { Button } from './ui/button'
const { id } = Astro.props
---

<section id={id} class="bg-background">
  <div
    class="container mx-auto mt-20 flex flex-row justify-center gap-20 items-end "
  >
    <!-- Text section -->
    <div class="flex flex-col items-start">
      <h1 class="nav-logo text-5xl">Brad Craig</h1>
      <h2 class="nav-logo text-3xl mb-3 md:text-3xl">
        Web Developer
      </h2>
      <h3 class="rubik-400">Seeking new opportunities in tech</h3>
      <Button className="mt-8 mb-16">Let's connect</Button>
    </div>
    <!-- Profile picture -->
    <div
      class="flex justify-center items-center sm:w-4/6 md:w-3/6 lg:w-1/3"
    >
      <ProfilePic />
    </div>
  </div>
</section>
