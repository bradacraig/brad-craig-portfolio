---
import { Icon } from 'astro-icon/components'
import ProfilePic from './ProfilePic.astro'
import { Button } from './ui/button'
const { id } = Astro.props
---

<section id={id} class="bg-background">
  <div
    class="container mx-auto px-16 my-8 md:my-32 flex flex-col md:flex-row justify-between items-center"
  >
    <!-- Text section with complex animations -->
    <div class="mx-8 md:mx-0 flex flex-col items-start">
      <h1 class="nav-logo lg:text-6xl text-5xl my-4 animate-fadeUp">
        Brad Craig
      </h1>
      <div class="ml-1">
        <h2 class="nav-logo text-3xl lg:text-4xl text-blue-500 animate-fadeIn">
          Web Developer
        </h2>
        <Button className="my-8 animate-fadeScaleIn" id="connect-btn">
          Let's connect
        </Button>
        <!-- Contact links -->
        <div class="hidden animate-fadeUp" id="contact-links">
          <ul class="flex space-x-4 mb-4">
            <li>
              <span class="flex items-center">
                <Icon name="mail" class="text-2xl mr-2" />
                <a
                  href="mailto:brad.a.craig@gmail.com"
                  target="_blank"
                  class="hover:text-primary"
                >
                  Email
                </a>
              </span>
            </li>
            <li>
              <span class="flex items-center">
                <Icon name="github" class="text-2xl mr-2" />
                <a
                  href="https://github.com/bradacraig"
                  target="_blank"
                  class="hover:text-primary"
                >
                  GitHub
                </a>
              </span>
            </li>
            <li>
              <span class="flex items-center">
                <Icon name="linkedin" class="text-2xl mr-2" />
                <a
                  href="https://www.linkedin.com/in/bradalancraig"
                  target="_blank"
                  class="hover:text-primary"
                >
                  LinkedIn
                </a>
              </span>
            </li>
          </ul>
        </div>
      </div>
    </div>
    <!-- Profile picture -->
    <div
      class="flex justify-center items-center md:w-3/5 lg:w-2/5 animate-fadeIn"
    >
      <ProfilePic />
    </div>
  </div>
</section>

<script>
  document
    .getElementById('connect-btn')
    ?.addEventListener('click', function () {
      const contactLinks = document.getElementById('contact-links')
      contactLinks?.classList.toggle('hidden')
    })
</script>
