---
const { id } = Astro.props
---

<section id={id} class="bg-background">
  <!-- Container for the entire section -->
  <div class="container mx-auto px-4 md:px-16 my-10">
    <!-- Heading aligned to the left -->
    <h2 class="nav-logo text-3xl my-2 text-left">Projects</h2>

    <!-- Grid for the project cards -->
    <div class="py-10 flex justify-center">
      <div class="grid md:grid-cols-3 gap-6 w-full">
        <!-- Project 1: Trip Hive -->
        <a
          href="/triphive"
          class="bg-primary shadow-md rounded-lg p-4 text-center"
        >
          <div class="w-full h-64 overflow-hidden rounded-lg">
            <img
              class="w-full object-cover"
              src="/TripHive/triphive-mock.png"
              alt="triphive app logo"
            />
          </div>
          <p class="mt-4 font-semibold text-black text-xl">Trip Hive</p>
        </a>

        <!-- Project 2: Code Quest -->
        <a href="/" class="bg-primary shadow-md rounded-lg p-4 text-center">
          <div class="w-full h-64 overflow-hidden rounded-lg">
            <img
              class="w-full object-cover"
              src="/CodeQuest/codequest-mock.webp"
              alt="codequest app logo"
            />
          </div>
          <p class="mt-4 font-semibold text-black text-xl">Code Quest</p>
        </a>

        <!-- Project 3: InvoiceTime -->
        <a href="/" class="bg-primary shadow-md rounded-lg p-4 text-center">
          <div class="w-full h-64 overflow-hidden rounded-lg">
            <img
              class="w-full object-cover"
              src="/InvoiceTime/invoice-time-2.png"
              alt="invoicetime wireframe screenshot"
            />
          </div>
          <p class="mt-4 font-semibold text-black text-xl">InvoiceTime</p>
        </a>
      </div>
    </div>
  </div>
</section>
