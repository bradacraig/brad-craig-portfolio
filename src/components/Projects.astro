---
import ProjectCard from './ProjectCard.astro'
const { id } = Astro.props
---

<section id={id} class="bg-background">
  <!-- Container for the entire section -->
  <div class="container mx-auto px-4 md:px-16 my-10">
    <!-- Heading aligned to the left -->
    <h2 class="nav-logo text-3xl my-2 text-left">Projects</h2>

    <!-- Grid for the project cards -->
    <div class="py-10 flex justify-center">
      <div class="grid md:grid-cols-3 gap-6 w-full">
        <!-- Trip Hive -->
        <ProjectCard
          href="/triphive"
          imgSrc="/TripHive/triphive-mock.png"
          imgAlt="triphive app logo"
          title="Trip Hive"
        />

        <!-- Code Quest -->
        <ProjectCard
          href="/"
          imgSrc="/CodeQuest/codequest-mock.webp"
          imgAlt="codequest app logo"
          title="Code Quest"
        />

        <!-- InvoiceTime -->
        <ProjectCard
          href="/"
          imgSrc="/InvoiceTime/invoice-time-2.png"
          imgAlt="invoicetime wireframe screenshot"
          title="InvoiceTime"
        />
      </div>
    </div>
  </div>
</section>
